{
    "verbose": true,
    "ignore": [
      "node_modules/*",
      "public/*",
      ".git/*",
      "*.test.js",
      "db/database.sqlite"
    ],
    "watch": [
      "server.js",
      "config/*",
      "controllers/*",
      "middleware/*",
      "models/*",
      "routes/*",
      "utils/*"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "restartable": "rs",
    "delay": "1000"
  }